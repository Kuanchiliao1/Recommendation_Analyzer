source "https://rubygems.org"
ruby "2.7.6"

gem "sinatra"
gem "sinatra-contrib" # Contains reloader and content for module
gem "erubis"          # enables embedding of ruby values into html/erb files
gem "puma"            # web server
gem "pg"              # implementing postgresql
gem "rerun"           # Reloads out-of-proccess, instead of Sinatra::Reloader which does so in process